        function controller($scope, Apperyio) {
            /**
             * user controller variables
             */
            /**
             * User controller functions
             */
            /**
             * @function init
             */
            $scope.init = function() {
                //On load screen logic
            };
        }
    });
    
#Login & welcome page Function: This function asks the user if they have already have an account for ZoneRate. If they do
the user can login. If not, the application asks the user to create an account

define(['require', 'app'],
    function(require, APP) {
        /**
         * Controller for Screen1
         * @module Screen1
         */
        APP.controller('Screen1', ['$scope', 'Apperyio', controller]);

        function controller($scope, Apperyio) {
            /**
             * user controller variables
             */
            $scope.message = Apperyio.EntityAPI('String');
            $scope.login = Apperyio.EntityAPI('String');
            $scope.noAccount = Apperyio.EntityAPI('String');
            $scope.signUp = Apperyio.EntityAPI('String');
            /**
             * User controller functions
             */
            /**
             * @function init
             */
            $scope.init = function() {
                //On load screen logic
                $scope.message = "Where to travel next.";
                $scope.login = "Login.";
                $scope.noAccount = "Don't have account? "
                $scope.signUp = "Sign Up "
            };
        }
    });
    
    define(['require', 'app'],
    function(require, APP) {
        /**
         * Controller for gps generated by Appery.io
         * @module gps
